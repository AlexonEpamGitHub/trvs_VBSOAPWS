{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SOAPCoreServices": "Debug"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true
      }
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Windows": {
      "Enabled": true,
      "ClaimsIssuer": "Windows",
      "AutomaticAuthenticate": true
    }
  },
  "Session": {
    "IdleTimeout": "00:20:00",
    "CookieName": "SOAPCoreServices.Session",
    "CookieHttpOnly": true,
    "CookieSecure": "Always"
  },
  "Globalization": {
    "RequestEncoding": "utf-8",
    "ResponseEncoding": "utf-8"
  },
  "SoapService": {
    "MaxReceivedMessageSize": 1048576,
    "MaxArrayLength": 1048576,
    "MaxStringContentLength": 1048576
  },
  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health"
  }
}